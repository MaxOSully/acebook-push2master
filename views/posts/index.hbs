
<link rel='stylesheet' href='../../stylesheets/style.css'>
<link rel='stylesheet' href='../../stylesheets/magnific-popup.css'>
<link rel='stylesheet' href='../../stylesheets/matey.min.css'>




<main style="margin-left: 1em;">
  <div class="main-section">
    <div class="container">
      <div class="main-section-data">
        <div class="row">
          <div class="col-lg-3 col-md-6 pd-left-none no-pd">
            <div class="main-left-sidebar no-margin box-shad">
              <div class="user-data full-width">
                <div class="user-profile">
                  <div class="username-dt">
                    <div class="usr-pic">
                      <img class="cropped2" src="../../images/mrBean.jpg" alt="">
                    </div>
                  </div><!--username-dt end-->
                  {{posts.fullname}}
                  <div class="user-specs">
                    <h3> {{this.postedby}} </h3>
                    <span>The best at Javascript</span>
                  </div>
                </div><!--user-profile end-->
                <ul class="user-fw-status">
                  <li>
                    <h4>Following</h4>
                    <span>34</span>
                  </li>
                  <li>
                    <h4>Followers</h4>
                    <span>155</span>
                  </li>
                  <li>
                    <span> Mr Bean is feeling: In Love </span>
                    <br>
                    <br>
                    <a href="#" title="">Poke</a>
                  </li>
                  <li>
                    <a href="/users/profile" title="">View Profile</a>
                  </li>
                  <li>
                    <form action='/users/logout' method="post" id='logout'>
                      <button class="post_project" type='submit'>Logout</button>
                    </form>
                  </li>
                </ul>
              </div>
            </div>
          </div>


                <div class="col-lg-9 col-md-6 no-pd">
                  <div class="main-ws-sec">
                    <div class="post-topbar box-shad">
                      <div class="user-picy">
                        <img src="../../images/mrBean.jpg" alt="Mr Bean">
                      </div>
                      <div class="post-st">
                        <ul>
                          <li><a class="post_project" href="/posts/new" title="">Create a New Post</a></li>
                        </ul>
                      </div><!--post-st end-->
                    </div><!--post-topbar end-->
                    {{#each posts}}
                    <div class="posts-section box-shad">
                      <div class="post-bar">
                        <div class="post_topbar">
                          <div class="usy-dt">
                            <img class="cropped2" src="../../images/mrBean.jpg" alt="Mr Bean">
                            <div class="usy-name">
                              <h3>{{this.postedby}}</h3>
                              <span><img src="http://gambolthemes.net/workwise-new/images/clock.png" alt="">{{this.time}}</span>
                            </div>
                          </div>
                          <!-- <div class="ed-opts">
                            <a href="#" title="" class="ed-opts-open"><i class="la la-ellipsis-v"></i></a>
                            <ul class="ed-options">
                              <li><a href="#" title="">Edit Post</a></li>
                              <li><a href="#" title="">Unsaved</a></li>
                              <li><a href="#" title="">Unbid</a></li>
                              <li><a href="#" title="">Close</a></li>
                              <li><a href="#" title="">Hide</a></li>
                            </ul>
                          </div> -->
                        </div>
                        <div class="epi-sec">
                          <ul class="descp">

                            <li><span> Location: Venus</span></li>
                          </ul>
                          {{!-- <ul class="bk-links">
                            <li><a href="#" title=""><i class="la la-bookmark"></i></a></li>
                            <li><a href="#" title=""><i class="la la-envelope"></i></a></li>
                          </ul> --}}
                        </div>
                        <div >
                          <h3>Guess What happened today!</h3>

                          <p>{{this.message}}<br><a href="#" title="">view more</a></p>

                          <ul class="job-dt">
                            <li><span> Have your say... </span></li>
                            <li><a href="/posts/{{this.id }}" title="">Add a comment</a></li>
                          </ul>

                          Friends Tagged in this post
                          {{#each this.tags}}
                          <div class="row skill-tags">
                            <li><a>{{this}}</a></li>
                          </div>
                          {{/each}}
                        </div>
                        <div class="job-status-bar">
                          <ul class="like-com">

                            <li><a href="#" class="com"><i class="fas fa-comment-alt"></i> Comments</a></li>
                            {{#each this.comments }}        <!--   for each comment in the array print -->
                            <ul> {{this}} </ul>
                              {{/each}}
                            <li>
                              <a href="#"><i class="fas fa-heart"></i> Like</a><br><br><span style="margin-left: 1em;">25</span>
                             </li>

                          </ul>
                          <a href="#"><i class="fas fa-eye"></i>Views 50</a>
                        </div>
                      </div>
                    </div>
                    {{/each}}
                   </div>
                  </div>

                </div>
              </div>
            </div>
          </div>

  </main>
